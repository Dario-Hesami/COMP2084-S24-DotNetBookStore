@model IEnumerable<DotNetBookStore.Models.Category>

@{
    ViewData["Title"] = "Categories";
}
<h1>Shop our Store</h1>
<a asp-controller="Categories" asp-action="Create">Add a new category</a>
<ul>
    @foreach (var c in Model)
    {
        <li>
            <a asp-controller="Categories" asp-action="Browse" asp-route-category="@c.Name">@c.Name</a>
        </li>
    }
</ul>

